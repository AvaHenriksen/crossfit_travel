<div class="page-header">
  <h3>City #<%= @city.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @city.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cities" class="btn btn-primary">
        Back
      </a>
      <a href="/cities/<%= @city.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_city/<%= @city.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A City has many food_options -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Food Options
      </li>

      <% @city.food_options.each do |food_option| %>
        <li class="list-group-item">
          <a href="/food_options/<%= food_option.id %>">
            <%= food_option.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/food_options/<%= food_option.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/food_options/<%= food_option.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_food_option/<%= food_option.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A City has many crossfit_boxes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Crossfit Boxes
      </li>

      <% @city.crossfit_boxes.each do |crossfit_box| %>
        <li class="list-group-item">
          <a href="/crossfit_boxes/<%= crossfit_box.id %>">
            <%= crossfit_box.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/crossfit_boxes/<%= crossfit_box.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/crossfit_boxes/<%= crossfit_box.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_crossfit_box/<%= crossfit_box.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
